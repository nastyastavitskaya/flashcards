<div align='center'>
  <table style='width:100%'>
    <thead>
      <legend><%= @category.name %></legend>
    </thead>
    <tbody>
    <tr><th>
    <% @category.cards.each do |card|  %>
      <tr>
        <th><td><%= image_tag(card.image_url) %></td></th>
      </tr>
      <tr>
        <th><%= t('card.original_text') %></th><td><%= card.original_text %></td>
      </tr>
      <tr>
        <th><%= t('card.translated_text') %></th><td><%= card.translated_text %></td>
      </tr>
      <tr>
        <th><%= t('card.review_date') %></th>
          <td><%= card.review_date.strftime('%m/%d/%Y, %H:%M') %></td>
          <td><%= link_to t('card.index.link_show'), category_card_path(@category, card) %></td>
          <td><%= link_to t('card.index.link_edit'), edit_category_card_path(@category, card) %></td>
          <td><%= link_to t('card.index.link_destroy'), category_card_path(@category, card),
          method: :delete, data: { confirm: t('card.index.confirm')} %></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
<h6><%= link_to t('footer'), categories_path %></h6>