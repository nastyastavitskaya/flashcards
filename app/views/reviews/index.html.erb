<div align="center">
<legend><%= t("card.review.title") %></legend>
  <% if @card %>
  <h4>
    <%= t("card.review.selected_category") %> <%= @card.category.name %>
  </h4>
  <p>
    <%= image_tag(@card.image_url) %>
  </p>
  <strong><%= @card.original_text %></strong>
  <%= form_for :review, url: reviews_path, html: {class: 'form' } do |f| %>
    <%= f.hidden_field :card_id, value: @card.id %>
    <%= f.label :user_translated_text, t("card.review.user_translation") %>
    <%= f.text_field :user_translated_text %>
    <div><%= f.submit t("card.review.submit"), class: "btn btn-primary" %></div>
    <% end %>
  <% else %>
    <strong><%= t("card.review.no_cards") %></strong>
<% end %>
</div>

